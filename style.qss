QPushButton {
  border: none;
  background-color: #fafafa;
  padding: 2px;
}

QPushButton:hover {
  background-color: #CCCCCC;
}

#subtab_holder {
  background: #fafafa;
}

#tool_button {
     background: #fafafa;
     border: none;
}

#tool_button:hover {
  background: #d3d3d3;
}

#tool_button:pressed {
  border-style: inset;
  background: #b4b4b4;
}

QPushButton:pressed {
  background-color: #B4B4B4;
  border-style: inset;
}

#customToolBar {
  background-color: #fafafa;
}

#actionHolder {
  background: #fafafa;
}

#action_toolbar{
  background-color: #fafafa;
  font-size: 12px;
  border: none;
  padding-bottom: 0;
  margin-bottom: 0px;
}

