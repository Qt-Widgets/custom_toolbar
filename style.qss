}


QVBoxLayout {
  background-color: red;
}

QHBoxLayout {
  background-color: red;
}


 /* Style the tab using the tab sub-control. Note that
     it reads QTabBar _not_ QTabWidget */
 QTabBar::tab#action_toolbar {
    background: #d3d3d3;
     min-width: 12ex;
     border: 1px solid #f6f6f6;
     padding-left: 30px;
     padding-right: 30px;
     padding-top: 1px;
     padding-bottom: 1px;
 }

 QTabBar::tab:selected#action_toolbar {
   background: #fafafa;
   border: none;
 }

QTabBar::tab:hover#action_toolbar {
  background: #e3e3e3;
}


